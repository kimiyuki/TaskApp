<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 android:layout_marginTop="4dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="4dp"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:layout_marginBottom="4dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="4dp" android:id="@+id/litView1row">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/text1"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="4dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginBottom="4dp" android:layout_marginStart="2dp"
                  app:layout_constrainedWidth="false" app:layout_constraintLeft_toRightOf="@id/text2"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/text2"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="4dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
                  app:layout_constraintVertical_bias="0.8"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="203dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/text3"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="4dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.19" app:layout_constraintHorizontal_bias="0.9"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>