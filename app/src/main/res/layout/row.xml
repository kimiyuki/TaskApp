<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:layout_constraintTop_toTopOf="parent"
                                             android:layout_marginTop="4dp"
                                             app:layout_constraintStart_toStartOf="parent"
                                             android:layout_marginStart="4dp"
                                             app:layout_constraintBottom_toBottomOf="parent"
                                             android:layout_marginBottom="4dp"
                                             android:id="@+id/litView1row">

    <TextView android:layout_width="150dp" android:layout_height="wrap_content"
              android:id="@+id/text1"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="4dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginBottom="4dp"
              android:layout_marginStart="4dp"
              app:layout_constrainedWidth="false"
              android:ellipsize="end"
              android:singleLine="true"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/text2"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="4dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
              app:layout_constraintVertical_bias="0.47000003"
              app:layout_constrainedWidth="false"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              app:layout_constraintStart_toEndOf="@+id/text1" android:layout_marginStart="8dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/text3"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="4dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
              android:textAlignment="gravity"
    />

</android.support.constraint.ConstraintLayout>

